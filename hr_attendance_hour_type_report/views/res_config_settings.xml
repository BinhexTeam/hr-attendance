<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr_attendance.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='hr_attendance']" position="inside">
                <h2>Night hours</h2>
                <div
                    class="row mt16 o_settings_container"
                    name="attendance_night_hours_setting_container"
                >
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <div class="row mt16">
                                <label
                                    for="hr_night_work_hour_start"
                                    class="col-3 col-lg-3"
                                />
                                <field
                                    name="hr_night_work_hour_start"
                                    class="col-3 col-lg-3 p-0"
                                    widget="float_time"
                                />
                            </div>
                            <div class="row mt16">
                                <label
                                    for="hr_night_work_hour_end"
                                    class="col-3 col-lg-3"
                                />
                                <field
                                    name="hr_night_work_hour_end"
                                    class="col-3 col-lg-3 p-0"
                                    widget="float_time"
                                />
                            </div>
                            <div class="row mt16">
                                <span
                                    class="fa fa-lg fa-building-o"
                                    title="Values set here are company-specific."
                                    groups="base.group_multi_company"
                                />
                                <div class="text-muted">
                                Set the begining and end of the night work period. This is set in the company's timezone (configured on the partner of the company).
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <h2>Weighting settings</h2>
                <div
                    class="row mt16 o_settings_container"
                    name="attendance_weighting_nighttime_setting_container"
                >
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="allow_weighting_nighttime_hours" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label
                                class="o_label_form"
                                for='allow_weighting_nighttime_hours'
                            />
                            <div class="row mt16">
                                <label
                                    for='weighting_nighttime_hours'
                                    class="col-3 col-lg-3"
                                    attrs="{'invisible': [('allow_weighting_nighttime_hours','!=', True)]}"
                                />
                                <field
                                    name="weighting_nighttime_hours"
                                    class="col-3 col-lg-3 p-0"
                                    attrs="{'invisible': [('allow_weighting_nighttime_hours','!=', True)]}"
                                />
                            </div>
                        </div>
                    </div>
                </div>
                <div
                    class="row mt16 o_settings_container"
                    name="attendance_weighting_overtime_setting_container"
                    attrs="{'invisible': [('hr_attendance_overtime', '!=', True)]}"
                >
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="allow_weighting_overtime_hours" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label
                                class="o_label_form"
                                for='allow_weighting_overtime_hours'
                            />
                            <div class="row mt16">
                                <label
                                    for='weighting_overtime_hours'
                                    class="col-3 col-lg-3"
                                    attrs="{'invisible': [('allow_weighting_overtime_hours','!=', True)]}"
                                />
                                <field
                                    name="weighting_overtime_hours"
                                    class="col-3 col-lg-3 p-0"
                                    attrs="{'invisible': [('allow_weighting_overtime_hours','!=', True)]}"
                                />
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
